{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "../",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@datev/cloning-decorator": ["libs/cloning-decorator/src/index.ts"],
      "@datev/event-bus": ["libs/event-bus/src/index.ts"],
      "@datev/multiple-did-identities": [
        "libs/multiple-did-identities/src/index.ts"
      ],
      "@datev/oid4vc": ["libs/oid4vc/src/index.ts"],
      "@datev/qr-scanner": ["libs/qr-scanner/src/index.ts"],
      "@datev/storage": ["libs/storage/src/index.ts"],
      "@datev/usePWA": ["libs/usePWA/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
